<Page
    x:Class="BudgetTracker.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudgetTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Expense Distribution" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Canvas x:Name="expenseCanvas" Height="400" Width="400"/>
            <ScrollViewer Margin="20,0" Padding="10" VerticalAlignment="Center" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl x:Name="expenseItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:PieData">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Rectangle Width="16" Height="16" Fill="{x:Bind color}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Percentage}"  Margin="20,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock Text="%" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        <Line Stroke="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Margin="4" StrokeThickness="6" X1="0" Y1="0" X2="9999" Y2="0" />
        <TextBlock Text="Income and Expense Ratio" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Canvas x:Name="incomeExpenseCanvas" Height="400" Width="400"/>
            <ScrollViewer Margin="20,0" Padding="10" VerticalAlignment="Center" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl x:Name="incomeExpenseitemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:PieData">
                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Rectangle Width="16" Height="16" Fill="{x:Bind color}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Percentage}"  Margin="20,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock Text="%" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
